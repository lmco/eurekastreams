<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:pager='urn:import:org.eurekastreams.web.client.ui.common.pager'
	xmlns:chart='urn:import:org.eurekastreams.web.client.ui.common.charts'>

	<ui:image field="activityHeaderBackground" src="style/images/activityHeaderBackground.png" />
	<ui:image field="hideDetails" src="style/images/hideDetailsBtn.png" />
	<ui:image field="viewDetails" src="style/images/viewDetailsBtn.png" />

	<ui:image field="everyoneHeader" src="style/images/everyoneHeader.png" />
	<ui:image field="followingHeader" src="style/images/followingHeader.png" />
	<ui:image field="privateHeader" src="style/images/privateIcon.png" />

	<ui:with field='resources' type='org.eurekastreams.web.client.ui.pages.master.StaticResourceBundle' />

	<ui:style
		type="org.eurekastreams.web.client.ui.common.widgets.activity.StreamDetailsComposite.StreamDetailsStyle">
		.analyticsChartContainer {
		float: right;
		margin: 0;
		width: 370px;
		}

		.stream-details
		{
		clear: left;
		float: left;
		margin: 0;
		width: 280px;
		}
		
		.stream-details > div
		{
			margin-bottom: 10px;
		}

		.stream-details-options
		{
		background-color: #111111;
		border-bottom: 1px
		solid #404040;
		border-top: 1px solid #404040;
		height:	37px;
		}

		.stream-avatar
		{
		background-image:
		url(style/images/avatarBackground.png);
		float: left;
		padding: 5px;
		margin: 10px;
		}

		.stream-avatar > img
		{
		padding: 0px;
		border:
		none;
		}

		.stream-details-options > .stream-details-option
		{
		color: white;
		display: block;
		float: left;
		height: 27px;
		margin: 10px 0 10px
		10px;
		padding: 0 15px;
		cursor: pointer;
		}
		
		.stream-details-options > .stream-details-option:hover
		{
		color: #999999;
		}
		
		.activeOption
		{
		background-image: url("style/images/subFilterBackground.png");
		}
		
		.activeOption:hover
		{
			color: white ! important;
		}

		.stream-details-container
		{
		height: 0;
		background-color: #252525;
		overflow: hidden;
		color: white;
		position:
		relative;
		top: -1px;
		}

		.stream-details-container h2
		{
		font-weight: bold;
		height: 16px;
		margin: 0 0 10px
		}
		
		.configureLink
		{
    	background-image: url("style/images/configure.png");
    	background-repeat: no-repeat;
    	bottom: 10px;
    	display: block;
    	height: 18px;
    	padding-left: 21px;
    	position: absolute;
    	right: 155px;
		}
		
		.stream-meta
		{
		color: #999999;
    	font-size: 12px;
		
		}

		.condensedStream .toggle-details-link, .condensedStream .follow-info-container,
		.condensedStream .stream-meta, .condensedStream .stream-avatar,
		.condensedStream .headerFollowLink, .condensedStream .configureLink
		{
		display: none;
		}

		.condensedStream .header
		{
		
		height: 60px;
		padding-left: 10px;
    	padding-top: 5px;
		}

		.condensedAvatar
		{
		display: none;
		float: left;
		margin: 10px;
		margin-right: 20px;
		}

		.condensedStream .condensedAvatar
		{
		display: block;
		}
		
		@sprite .condensedStream .everyoneAvatar
		{
		gwt-image: "everyoneHeader";
		}

		@sprite .condensedStream .privateAvatar
		{
		gwt-image: "privateHeader";
		}

		@sprite .condensedStream .followingAvatar
		{
		gwt-image: "followingHeader";
		}

		@sprite .header {
		gwt-image: "activityHeaderBackground";
		position:
		relative;
		color: white;
		}

		.stream-info-container
		{
		float: left;
		margin-left: 20px;
		margin: 10px;
		margin-left: 0;
		width: 430px;
		}

		.follow-info-container
		{
		margin: 10px;
		float: right;
		text-align: center;
		}
		
		.follow-info-container > span
		{
		font-size: 18px;
		font-weight: bold;
		}

		.follow-info-link
		{
		color: #0066CC;
		display: block;
		cursor: pointer;
		}

		.stream-name
		{
		display: block;
		font-weight: bold;
		font-size: 24px;
		}

		.toggle-details-link
		{
		clear: right;
		float: right;
		text-indent: 1000em;
		overflow: hidden;
		position: absolute;
		bottom: 0;
		right: 0;
		cursor: pointer;
		z-index: 10;
		}

		@sprite .view-details
		{
		gwt-image: "viewDetails";
		}
		
		.streamAbout
		{
		padding: 25px;
		overflow: hidden;
		}
		
		.stream-details-content 
		{
			overflow: hidden;
			width: 100%;
			position: relative;
			top: -9px;
		}
		
		.pagerControl
		{
			margin-top: 5px;
		}
			
		.metrics-data-avg
		{
			float: left;	
		}

		.metrics-data-total
		{
			float: right;
			margin-right: 20xp;	
		}
		
		.metrics-data-avg span, .metrics-data-total span, .metrics-data-avg b, .metrics-data-total b
		{
			font-weight: bold;
			font-size: 16px;
			color: white;
			padding-right: 10px;
		}
		
		.metrics-data-avg > div, .metrics-data-total > div
		{
			margin-left: 10px;
			margin-top: 5px;
		}
		
		.metrics-data-avg, .metrics-data-total
		{
			margin-top: 10px;
			color: #666666;
		}
		
		.chart-description
		{
			color: #666666;
    		font-size: 12px;
    		font-style: italic;
    		font-weight: bold;
    		margin-right: 5px;
    		margin-top: 5px;
    		text-align: right;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class="{style.header}">
			<g:HTMLPanel ui:field="condensedAvatar" addStyleNames="{style.condensedAvatar}"></g:HTMLPanel>
			<g:HTMLPanel addStyleNames="{style.stream-avatar}"
				ui:field="streamAvatar">
			</g:HTMLPanel>
			<div class="{style.stream-info-container}">
				<span class="{style.stream-name}" ui:field="streamName"></span>
				<span class="{style.stream-meta}" ui:field="streamMeta"></span>
				<g:Label addStyleNames="{style.headerFollowLink} {resources.coreCss.followLink}" ui:field="followLink"></g:Label>
				<g:Anchor addStyleNames="{style.configureLink}" ui:field="configureLink">Configure</g:Anchor>
			</div>
			<div class="{style.follow-info-container}">
				<span ui:field="followerCount"></span>
				<g:Label addStyleNames="{style.follow-info-link}"
					ui:field="showFollowers">
					Followers</g:Label>
			</div>
			<div class="{style.follow-info-container}">
				<span ui:field="followingCount"></span>
				<g:Label addStyleNames="{style.follow-info-link}"
					ui:field="showFollowing">
					Following</g:Label>
			</div>
			<g:Anchor addStyleNames="{style.toggle-details-link} {style.view-details}"
				ui:field="toggleDetails">Details</g:Anchor>
		</div>
		<div class="{style.stream-details-container}" ui:field="streamDetailsContainer">
			<div class="{style.stream-details-options}">
				<g:Label addStyleNames="{style.stream-details-option}" ui:field="aboutLink">About</g:Label>
				<g:Label addStyleNames="{style.stream-details-option}" ui:field="followersLink">Followers</g:Label>
				<g:Label addStyleNames="{style.stream-details-option}" ui:field="followingLink">Following</g:Label>
			</div>
			<div class="{style.stream-details-content}">
				<g:HTMLPanel addStyleNames="{style.streamAbout}" ui:field="streamAbout">
					<div class="{style.stream-details}">
						<h2>Description</h2>
						<div ui:field="streamDescription"></div>
						<h2>Interests</h2>
						<div ui:field="streamInterests"></div>
						<h2>Popular Hashtags</h2>
						<div ui:field="streamHashtags"></div>
					</div>
					<g:HTMLPanel addStyleNames="{style.analyticsChartContainer}"
						ui:field="analyticsChartContainer">
						<chart:StreamAnalyticsChart ui:field="chart"></chart:StreamAnalyticsChart>
						<div class="{style.chart-description}">Stream views over the last 30 days</div>
						<div class="{style.metrics-data-avg}">
							<b>Avg Daily Activity</b>
							<div><span ui:field="avgViewers"></span>Viewers</div> 
							<div><span ui:field="avgViews"></span>Views</div> 
							<div><span ui:field="avgContributors"></span>Contributors</div> 
							<div><span ui:field="avgMessages"></span>Messages</div> 
							<div><span ui:field="avgComments"></span>Comments</div> 
						</div>
						<div class="{style.metrics-data-total}">
							<b>Total</b>
							<div><span ui:field="totalViews"></span>Views</div> 
							<div><span ui:field="totalContributors"></span>Contributors</div> 
							<div><span ui:field="totalMessages"></span>Messages</div> 
							<div><span ui:field="totalComments"></span>Comments</div> 
						</div>
					</g:HTMLPanel>
				</g:HTMLPanel>
				<pager:PagerComposite addStyleNames="pagerControl" ui:field="streamFollowers">
				</pager:PagerComposite>
				<pager:PagerComposite addStyleNames="pagerControl" ui:field="streamFollowing">
				</pager:PagerComposite>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
	